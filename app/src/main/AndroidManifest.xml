<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zeon.bmrcalculator">

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.IntroActivity" android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" android:theme="@style/AppThemeNoActionBar"/>
        <activity android:name=".activity.FoodActivity" android:label="Add Food"/>
        <activity android:name=".activity.HistoryActivity" android:label="History"/>
        <activity android:name=".activity.ProfileActivity" android:label="Profile"/>
        <activity android:name=".activity.HelpActivity" android:label="Help"/>
    </application>

</manifest>